rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write access to FlatDesign collection
    match /FlatDesign/{document=**} {
      allow read, write: if true;
    }
    
    // Allow public read access to attendance collection
    match /attendance/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 